 <% if @error_messages %>
  <h2>User Not Created</h2>
  <h3>Please Try Again.</h3>
  <% @error_messages.each do |message| %>
    <p style='color:red'><%= message %></p>
  <% end %>
  
<% end %>

 <form class = 'login' method="post" action="/user/new">
  <p>Name<input type="text" name="user[name]"placeholder="name" required></p>
  <p>Email<input type="email" name="user[email]"placeholder="email" required></p>
  <p>Password<input type="password" name="user[password]" placeholder="password" required></p>
  <p>Confirm Password<input type="password" name="user[password_confirmation]" placeholder="confirm password" required></p>
  <input type="submit" value="Create User">
</form>